

EBIN = ./ebin/

DEL = rm -rf


CREATE_DIR_CMD = @set -e ; \
            for d in $(ARMY_DIRS); do                    \
	    if test ! -d $(EBIN)$$d ; then			\
	    	mkdir $(EBIN)$$d ;			\
	    fi ;		\
	    done;		\


all: compile


compile:
	$(CREATE_DIR_CMD)
	erl -make


clean:
	$(DEL) $(EBIN)*


test: clean compile
	erl -nologo -noshell -pz ebin -s testAll test -s init stop

